@using SportsStore.Infrastructure
@model Cart

<div class="">
    @if (Model.Lines.Any())
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Lines.Sum(x=>x.Quantity) item(s)
            @Model.ComputeTotalValue().ToString("C")
        </small>
    }
    <a class="btn btn-secondary btn-sm" asp-page="/Cart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()" >
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>